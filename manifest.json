{
    "name": "Quick URL copy",
    "version": "1.0.3",
    "manifest_version": 2,
    "description": "Copy url and description",
    "browser_action": {
        "default_icon": "icon128.png"
    },
    "icons": { 
        "16": "icon16.png",
        "32": "icon32.png",
        "48": "icon48.png",
        "64": "icon64.png",
        "128": "icon128.png" },
    "content_scripts": [{
        "matches": [ "*://*/*", "file:///*:/*/*" ],
        "js": [ "content.js" ]
    }],
    "background": {
        "page": "background.html"
    },
    "options_page": "options.html",
    "permissions": ["activeTab", "tabs", "clipboardWrite", "<all_urls>", "storage" ]
}
