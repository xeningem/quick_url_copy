{
    "name": "Quick URL copy",
    "version": "1.0.1",
    "manifest_version": 2,
    "description": "Copy url and description",
    "browser_action": {
        "default_icon": "default_icon64.png"
    },
    "content_scripts": [{
        "matches": [ "*://*/*", "file:///*:/*/*" ],
        "js": [ "content.js" ]
    }],
    "background": {
        "page": "background.html"
    },
    "options_page": "options.html",
    "permissions": ["activeTab", "tabs", "clipboardWrite", "<all_urls>" ]
}
